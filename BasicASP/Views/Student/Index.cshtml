@model IEnumerable<BasicASP.Models.Student>;
@{
	ViewData["Title"] = "View Student";
}

<div class="text-center">
	<h1>Total Score</h1>
</div>
<div>
	<table class="table table-dark">
		<thead>
			<tr>
				<td>Id</td>
				<td>Name</td>
				<td>Score</td>
				<td>Update</td>
				<td>Delete</td>
			</tr>
		</thead>
		<tbody>
			@{
				foreach (var item in Model)
				{
					<tr>
						<td>@item.Id</td>
						<td>@item.Name</td>
						<td>@if (item.Score >= 50)
							{
								<strong class="text-success">@item.Score</strong>
							}
							else 
							{
								<strong class="text-danger">@item.Score</strong>
							}
						</td>
						<td>
							<a href="/User/EditUser?id=@item.Id" class="btn btn-primary">Edit</a>
						</td>
						<td>
							<a href="/User/DeleteUser?id=@item.Id" class="btn btn-danger">Delete</a>
						</td>
					</tr>
				}
			}
		</tbody>

	</table>
</div>